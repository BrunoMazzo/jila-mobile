.page.dictionary-page
  .row
    .columns.small-12.large-5.small-centered
      %ul.small-block-grid-2.letters.menu-items
        %h2.text-center{ng: {if: 'letters.length === 0'}}
          No entries
        %li{ng: {repeat: 'letter in letters'}}
          %a{href: '#/dictionary/{{letter}}'}
            .category.menu-item
              .inner
                %h3.name{fit: {text: '0.8'}} {{ letter }}
